   "source": [
    "x,y, a, b= map(int, input().split())\n",
    "r = 0\n",
    "if 2*a <= b:\n",
    "    print((x+y)*a)\n",
    "else:\n",
    "    s = min(x, y)\n",
    "    r = s*b\n",
    "    c = abs(x-y)\n",
    "    if a > b:\n",
    "        if c % 2 == 0:\n",
    "            r += c * b\n",
    "        else:\n",
    "            r += (c-1)*b + a\n",
    "    else:\n",
    "        r += c*a\n",
    "    print(r)\n"
   ]
